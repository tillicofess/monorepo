{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "# === Development ===": "",
    "dev": "pnpm --filter @monorepo/ssr-mdx dev",
    "dev:bff": "pnpm --filter @monorepo/bff-backend dev",
    "dev:csr": "pnpm --filter @monorepo/csr-backend dev",
    "# === Build ===": "",
    "build": "pnpm -r build",
    "build:ssr-mdx": "pnpm --filter @monorepo/ssr-mdx build",
    "# === Code Quality ===": "",
    "lint": "pnpm lint:biome && pnpm lint:cspell",
    "lint:biome": "biome lint .",
    "lint:cspell": "cspell '**/*.{ts,tsx,js,jsx,json,md}' --config cspell.json",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "# === Testing ===": "",
    "test": "pnpm -r test",
    "test:ssr-mdx": "pnpm --filter @monorepo/ssr-mdx test",
    "# === Monorepo Utils ===": "",
    "clean": "pnpm -r exec rm -rf node_modules dist build .next .turbo",
    "deps:check": "pnpm -r outdated",
    "deps:update": "pnpm -r update",
    "# === Git ===": "",
    "commit": "git-cz",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=24.13.1",
    "npm": ">=11.8.0",
    "pnpm": ">=10.29.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@cspell/dict-lorem-ipsum": "^4.0.5",
    "@types/node": "^25.2.3",
    "commitizen": "^4.3.1",
    "cspell": "^9.6.4",
    "cz-git": "^1.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  }
}